---
import {
  IconJs,
  IconNextjs,
  IconPython,
  IconTs,
  IconAngular,
  IconReactjs,
} from "./icons/global-icons";
---

<div class="cuboContainer">
  <div class="cubo">
    <div class="cara cara1 grid justify-center items-center">
      <IconReactjs className="w-[50px] sm:w-[75px] h-[50px] sm:h-[75px]" />
    </div>
    <div class="cara cara2 grid justify-center items-center">
      <IconPython className="w-[50px] sm:w-[75px] h-[50px] sm:h-[75px]" />
    </div>
    <div class="cara cara3 grid justify-center items-center">
      <IconAngular className="w-[50px] sm:w-[75px] h-[50px] sm:h-[75px]" />
    </div>
    <div class="cara cara4 grid justify-center items-center">
      <IconNextjs className="w-[50px] sm:w-[75px] h-[50px] sm:h-[75px]" />
    </div>
    <div class="cara cara5 grid justify-center items-center">
      <IconTs className="w-[50px] sm:w-[75px] h-[50px] sm:h-[75px]" />
    </div>
    <div class="cara cara6 grid justify-center items-center">
      <IconJs className="w-[50px] sm:w-[75px] h-[50px] sm:h-[75px]" />
    </div>
  </div>
</div>

<style>
  .cuboContainer {
    perspective: 1000px;
    width: 200px;
    height: 200px;
    margin: 50px auto;
  }

  .cubo {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transform: rotateX(0deg) rotateY(0deg);
    animation: spin 15s infinite linear;
  }

  .cara {
    position: absolute;
    width: 200px;
    height: 200px;
    box-sizing: border-box;
    font-size: 3em;
    text-align: center;
    line-height: 200px;
  }

  .cara1 {
    transform: translateZ(100px) rotateY(180deg);
    /* Blanco */
    background-color: #f0f0f0;
  }
  .cara2 {
    transform: rotateY(90deg) translateZ(100px);
    /* Blanco un poco más oscuro */
    background-color: #e0e0e0;
  }
  .cara3 {
    transform: rotateY(180deg) translateZ(100px);
    /* Blanco aún más oscuro */
    background-color: #d0d0d0;
  }
  .cara4 {
    transform: rotateY(-90deg) translateZ(100px);
    /* Blanco más oscuro */
    background-color: #c0c0c0;
  }
  .cara5 {
    transform: rotateX(90deg) translateZ(100px);
    /* Blanco más oscuro aún */
    background-color: #b0b0b0;
  }
  .cara6 {
    transform: rotateX(-90deg) translateZ(100px);
    /* Blanco más oscuro aún */
    background-color: #a0a0a0;
  }

  @keyframes spin {
    0% {
      transform: rotateX(0deg) rotateY(0deg);
    }
    100% {
      transform: rotateX(360deg) rotateY(360deg);
    }
  }

  @media screen and (max-width: 400px) {
    .cuboContainer {
      width: 120px;
      height: 120px;
    }

    .cara {
      width: 120px;
      height: 120px;
      line-height: 120px;
    }

    .cara1 {
      transform: translateZ(60px) rotateY(180deg);
    }
    .cara2 {
      transform: rotateY(90deg) translateZ(60px);
    }
    .cara3 {
      transform: rotateY(180deg) translateZ(60px);
    }
    .cara4 {
      transform: rotateY(-90deg) translateZ(60px);
    }
    .cara5 {
      transform: rotateX(90deg) translateZ(60px);
    }
    .cara6 {
      transform: rotateX(-90deg) translateZ(60px);
    }
  }
</style>
