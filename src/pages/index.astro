---
import { IconGithub } from "../components/others/Icons"
import Contact from "../components/pages/home/Contact.astro"
import Footer from "../components/pages/home/Footer.astro"
import Projects from "../components/pages/home/Projects.astro"
import Skills from "../components/pages/home/Skills.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout title="Jherson Rojas dev">
  <main
    aria-label="Main container for the portfolio"
    class="custombar relative h-screen overflow-x-hidden bg-black"
  >
    <section id="welcome"></section>
    <header
      class="sticky top-0 z-50 flex h-min items-center justify-end bg-black/80 px-6 py-4"
    >
      <nav class="flex items-center gap-6 text-white">
        <menu class="hidden gap-6 *:transition-all sm:flex">
          <a
            href="#welcome"
            class="rounded-md px-5 py-3 lg:hover:bg-white lg:hover:text-black"
          >
            Welcome
          </a>
          <a
            href="#projects"
            class="rounded-md px-5 py-3 lg:hover:bg-white lg:hover:text-black"
          >
            Projects
          </a>
          <a
            href="#skills"
            class="rounded-md px-5 py-3 lg:hover:bg-white lg:hover:text-black"
          >
            Skills
          </a>
          <li class="rounded-md px-5 py-3 lg:hover:bg-white lg:hover:text-black">
            Contact
          </li>
        </menu>
        <a
          href="https://github.com/JhersonRojas"
          target="_blank"
          referrerpolicy="no-referrer"
          class="flex items-center justify-center rounded-md p-3 transition-all lg:hover:bg-white lg:hover:text-black"
        >
          <IconGithub name="Icon for github" className="size-6" />
        </a>
      </nav>
    </header>
    <article
      aria-label="welcome section"
      class="relative mb-12 h-[90vh] min-h-[600px] w-full text-white"
    >
      <div class="bg-pattern absolute top-0 h-full w-full"></div>
      <section class="absolute left-0 top-1/3 z-10 grid w-full min-w-fit px-6 sm:px-0">
        <h1 class="mx-auto mb-4 font-poppins text-5xl tracking-tighter">
          Hi, I'm Jherson Rojas
        </h1>
        <p class="mx-auto mb-4 text-gray-300">
          Full-Stack Developer passionate about creating elegant and efficient solutions.
        </p>
        <div class="mx-auto flex h-min items-center gap-4 [&_*]:transition-all">
          <a
            href="#contact"
            class="rounded-md border-min border-opaque bg-black px-6 py-2 text-white lg:hover:bg-white lg:hover:text-black"
          >
            Contact me
          </a>
          <a
            href="#projects"
            class="rounded-md bg-white px-6 py-2 text-black lg:hover:bg-black lg:hover:text-white"
          >
            More ...
          </a>
        </div>
      </section>
    </article>
    <section id="projects"></section>
    <Projects />
    <section id="skills"></section>
    <Skills />
    <section id="contact"></section>
    <Contact />
    <Footer />
  </main>
</Layout>
