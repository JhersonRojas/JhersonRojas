    </article>
    <article class="h-full w-full">
      <h3 class="mb-2 text-end font-poppins text-xl sm:text-2xl">
        {dic.skills.databases.title}
      </h3>
      <figure
        class="flex justify-end gap-4 overflow-x-auto rounded-md border-min border-opaque p-6 *:transition-all"
      >
        <Image
          alt="Mariadb"
          title="Mariadb"
          width={50}
          height={50}
          src="/assets/backend/database/mariadb.svg"
          class="size-12 lg:hover:scale-110"
        />
        <Image
          alt="Mysql"
          title="Mysql"
          width={50}
          height={50}
          src="/assets/backend/database/mysql.svg"
          class="size-12 lg:hover:scale-110"
        />
        <Image
          alt="Mongo db"
          title="Mongo db"
          width={50}
          height={50}
          src="/assets/backend/database/mongo.svg"
          class="size-12 lg:hover:scale-110"
        />
